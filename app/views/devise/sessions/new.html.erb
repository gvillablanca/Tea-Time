<!-- <h2>Log in</h2> -->
<section id="login" class="container-fluid grey lighten-1">
  <div class="row">
    <div class="col s8 offset-s2 center-align">
      <div class="logo">
        <%= image_tag "logos/logo-white.png" %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :Correo_electrónico %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :Contraseña %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions waves-effect waves-light btn grey darken-4">
          <%= f.submit "Ingresar" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
